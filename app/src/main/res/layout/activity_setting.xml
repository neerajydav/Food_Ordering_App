<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center_horizontal"
    tools:context=".Activity.SettingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:src="@drawable/profile"
                app:civ_border_color="@color/black"
                android:layout_marginTop="5sp"
                app:civ_border_width="3dp"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neeraj Yadav"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:id="@+id/plain_profilename">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="neerajydav884@gmail.com"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="3sp"
                android:id="@+id/plain_profileemail">
            </TextView>
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Profile Image"
                android:padding="10sp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:backgroundTint="@color/grey"
                android:elevation="3sp"
                android:id="@+id/btn_changeprofileimage">
            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60sp"
                android:layout_marginTop="10sp"
                android:padding="5sp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:minHeight="60sp"
                    android:weightSum="6">

                    <TextView
                        android:id="@+id/text_profileabout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="6sp"
                        android:layout_weight="5"
                        android:text="Do Not Disturb. I'm Working !"
                        android:textColor="@color/black"
                        android:textSize="16sp">
                    </TextView>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:src="@drawable/baseline_edit_note_24"
                        android:id="@+id/img_profilechangeabout">
                    </ImageView>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                app:endIconMode="clear_text"
                android:layout_marginTop="20sp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Neeraj Yadav"
                    android:id="@+id/text_profilename">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                app:endIconMode="clear_text"
                android:layout_marginTop="20sp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/text_profilenumber">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:endIconMode="password_toggle"
                android:layout_marginTop="20sp">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="password"
                    android:inputType="textPassword"
                    android:id="@+id/text_profilepassword">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="20sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btn_updateprofile">
            </com.google.android.material.button.MaterialButton>



        </LinearLayout>
    </ScrollView>
</LinearLayout>